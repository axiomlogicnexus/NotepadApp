@inject ThemeService ThemeService

<div class="theme-switcher">
    <button @onclick="ToggleTheme" class="theme-button" title="@(ThemeService.IsDarkMode ? "Switch to Light Mode" : "Switch to Dark Mode")">
        @if (ThemeService.IsDarkMode)
        {
            <span class="oi oi-sun" aria-hidden="true"></span>
        }
        else
        {
            <span class="oi oi-moon" aria-hidden="true"></span>
        }
    </button>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await ThemeService.InitializeAsync();
        ThemeService.OnThemeChanged += (sender, args) => StateHasChanged();
    }

    private async Task ToggleTheme()
    {
        await ThemeService.ToggleThemeAsync();
    }
}